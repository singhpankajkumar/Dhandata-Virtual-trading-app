<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".WatchlistFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editTextText"
            android:layout_width="322dp"
            android:layout_height="61dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:drawableLeft="@android:drawable/ic_search_category_default"
            android:ems="10"
            android:background="@android:drawable/editbox_background_normal"
            android:backgroundTint="@color/LightWhite"
            android:layout_weight="1"
            android:hint="Enter your stock and mutual fund"
            android:inputType="text"
            android:textSize="16dp"/>

        <ImageView
            android:id="@+id/imgprofile"
            android:clickable="true"
            android:layout_width="73dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="4dp"
            app:layout_editor_absoluteX="2dp"
            app:srcCompat="@drawable/baseline_person_24" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Watchlist1"
            android:layout_weight="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Large">

        </TextView>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:text="Watchlist2"
            android:textAppearance="@style/TextAppearance.AppCompat.Large">

        </TextView>
        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:text="Watchlist3"
            android:textAppearance="@style/TextAppearance.AppCompat.Large">

        </TextView>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/recycleradd"
        android:layout_height="match_parent"
        tools:listitem="@layout/item_stock">

    </androidx.recyclerview.widget.RecyclerView>


</LinearLayout>